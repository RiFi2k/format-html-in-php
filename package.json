{
  "name": "format-html-in-php",
  "displayName": "Format HTML in PHP",
  "description": "Provides formatting for the HTML code in PHP files using JSbeautify - Works well paired with a PHP formatting extension",
  "version": "1.5.3",
  "publisher": "rifi2k",
  "repository": {
    "url": "https://github.com/RiFi2k/format-html-in-php"
  },
  "license": "Unlicense",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Formatters"
  ],
  "keywords": [],
  "contributes": {
    "commands": [
      {
        "command": "formatHtmlInPhp.format",
        "title": "Format HTML in PHP"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "formatHtmlInPhp.format",
          "when": "editorLangId == php"
        }
      ],
      "editor/context": [
        {
          "command": "formatHtmlInPhp.format",
          "when": "editorLangId == php"
        }
      ]
    },
    "keybindings": [
      {
        "command": "formatHtmlInPhp.format",
        "key": "ctrl+alt+f",
        "when": "editorLangId == php"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:php"
  ],
  "main": "./dist/extension",
  "scripts": {
    "vscode:prepublish": "node_modules/webpack/bin/webpack.js --mode production",
    "webpack": "node_modules/webpack/bin/webpack.js --mode development",
    "webpack-dev": "node_modules/webpack/bin/webpack.js --mode development --watch",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.123",
    "@types/node": "^10.12.18",
    "lodash-webpack-plugin": "^0.11.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "typescript": "^3.3.4",
    "vscode": "^1.1.33",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "dependencies": {
    "js-beautify": "1.9.0",
    "lodash": "^4.17.11"
  }
}
